<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_centerHorizontal="true"
            android:layout_height="96dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="Push message"
            />
        <ImageButton
            android:id="@+id/cancel"
            android:src="@drawable/ic_action_edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:padding="8dp"
        android:gravity="center"
        android:text="Push message 2"
        />
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:padding="8dp"
        android:gravity="center"
        android:text="Push message 3"
        />

    <com.forgerock.authenticator.ConfirmationSwipeBar
        android:id="@+id/slideToConfirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:clickable="false"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@android:color/darker_gray"
    android:thumb="@drawable/ic_launcher" />
</LinearLayout>